block content
  .settings-card-wide.mdl-card.mdl-shadow--2dp
    .mdl-card__title
      h2.mdl-card__title-text Settings
    .mdl-card__supporting-text
      //- span Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      //- span Mauris sagittis pellentesque lacus eleifend lacinia...
      ul.mdl-list
        li.mdl-list__item.mdl-list__item--three-line
          span.mdl-list__item-primary-content
            //- i.material-icons.mdl-list__item-avatar person
            span.settings-title Github Integration
            span.mdl-list__item-text-body Log in to sync your memo with Github repository
          span.mdl-list__item-secondary-content
            button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored
              i.material-icons arrow_forward
        li.mdl-list__item.mdl-list__item--three-line
          span.mdl-list__item-primary-content
            //- i.material-icons.mdl-list__item-avatar person
            span.settings-title Change Background
            span.mdl-list__item-text-body Upload new background image
          span.mdl-list__item-secondary-content
            button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored
              i.material-icons file_upload
        li.mdl-list__item.mdl-list__item--three-line
          span.mdl-list__item-primary-content
            //- i.material-icons.mdl-list__item-avatar person
            span.settings-title Set password
            span.mdl-list__item-text-body Set password to protect your memo
          span.mdl-list__item-secondary-content
            button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored
              i.material-icons enhanced_encryption
        li.mdl-list__item.mdl-list__item--three-line
          span.mdl-list__item-primary-content
            //- i.material-icons.mdl-list__item-avatar person
            span.settings-title Change time zome
            span.mdl-list__item-text-body Change your Time Zone
          span.mdl-list__item-secondary-content
            button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored
              i.material-icons language
